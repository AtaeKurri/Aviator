<Window x:Class="Aviator.Core.EditorData.Windows.CodePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aviator.Core.EditorData.Windows"
        xmlns:avalon="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
        mc:Ignorable="d"
        Title="Code Preview" Height="450" Width="800">
    <Grid>
        <avalon:TextEditor x:Name="codeText"
                           FontFamily="JetBrains Mono" FontSize="13"
                           SyntaxHighlighting="Lua" ShowLineNumbers="True"/>
    </Grid>
</Window>
